{
  "builds": [
    {
      "src": "api/server.js",
      "use": "@vercel/node@2.0.0"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "public" }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/api/server.js" }
  ]
}