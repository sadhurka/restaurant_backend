{
  "builds": [
    { 
      "src": "api/index.js", 
      "use": "@vercel/node" 
    },
    { 
      "src": "package.json", 
      "use": "@vercel/static-build", 
      "config": { "distDir": "public" } 
    }
  ],
  "routes": [
   
    { "handle": "filesystem" }, 
    
   
    { "src": "/(.*)", "dest": "/api/index.js" }
  ]
}